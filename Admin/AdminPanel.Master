<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="AdminPanel.master.cs" Inherits="Online_Exam_System.Admin.AdminPanel" %>

<!DOCTYPE html>
<html>
<head runat="server">
    <title>
        <asp:ContentPlaceHolder ID="Title" runat="server" />
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <asp:ContentPlaceHolder ID="head" runat="server" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            width: 100%;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        .wrapper {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: white;
            padding-top: 1rem;
            min-height: 100vh;
            position: fixed;
        }

        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
        }

        .sidebar a:hover {
            background-color: #343a40;
        }

        .content-area {
            margin-left: 250px; /* equal to sidebar width */
            width: calc(100% - 250px);
        }

        .topbar {
            background-color: #fff;
            padding: 15px 20px;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .main-content {
            padding: 20px;
        }
        .profile-img {
    width: 100px;
    height: 100px;
    border-radius: 50%; /* makes it circular */
    object-fit: cover; /* crops image properly */
    border: 2px solid #fff;
    display: block;
    margin: 0 auto;
}

    </style>
</head>
<body>
    <form id="form1" runat="server">
        <div class="wrapper">
            <!-- Sidebar -->
            <div class="sidebar">
                <h4 class="text-center">Admin Panel</h4>
                <p class="text-center">&nbsp;</p>
               
                <a href="#">Home</a>
                <a href="#">Manage Users</a>
                <a href="#">Manage Exams</a>
                <a href="#">Results</a>
                <a href="#">Logout</a>
            </div>

            <!-- Content Area -->
            <div class="content-area">
                <!-- Topbar -->
                <div class="topbar">
                    <h4>Welcome, <asp:Label ID="Label1" runat="server" Text="Label"></asp:Label>
                    </h4>
                    <button class="btn btn-danger">Logout</button>
                </div>

                <!-- Main Content -->
                <div class="main-content">
                    <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server" />
                </div>
            </div>
        </div>
    </form>
</body>
</html>
